<div class="center">
<div class="edit">
<h1>Edit</h1>
</div>
</div>

<div class="blank1">

    <%= form_for @tweet do |f| %>
      <div class="field">
        <%= f.label :写真　　　　　 %>
        <%= f.file_field :image %>
      </div>

  <div class="field">
    <%= f.label :商品名　　　　 %>
    <%= f.text_field :name, :size => 100 %>
  </div>

  <div class="field">
    <%= f.label :商品の概要　　 %>
    <%= f.text_field :detail, :size => 100 %>
  </div>

  <div class="field">
    <%= f.label :値段（税込）　 %>
    <%= f.number_field :price,  min: 100, max: 15000 %>
  </div>

  <div class="field">
    <%= f.label :ホームページ　 %>
    <%= f.text_field :link, :size => 100 %>
  </div>


<div class='field'>
  <div class='tags'>
    <%= f.collection_check_boxes(:tag_ids, Tag.all, :id, :name) do |tag| %>
        
            <%= tag.label class: 'form-check-label' do %>
                <%= tag.check_box class: 'form-check-input' %>
                <%= tag.text %>
            <% end %>
        
    <% end %>
  </div>
</div>

<div class="center2">
<%= f.submit "編集する", class: 'search-button' %>
</div>
<% end %>


</div>